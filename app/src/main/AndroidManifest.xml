<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.abheyrana.quicknews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/news_app_icon1"
        android:label="Quick News"
        android:roundIcon="@mipmap/news_app_icon1"
        android:supportsRtl="true"
        android:theme="@style/RanaTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/RanaNoActionBar"/>
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Quick News"
            android:theme="@style/RanaNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsSourceSelection"
            android:label="Select Atleast 10 News Sources" />
        <activity
            android:name=".DisplayNews"
            android:label="For You" />
    </application>

</manifest>